rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(spaceId) {
      return isSignedIn()
        && get(/databases/$(database)/documents/spaces/$(spaceId)).data.ownerId == request.auth.uid;
    }

    match /spaces/{spaceId} {
      allow read: if isSignedIn() && resource.data.ownerId == request.auth.uid;
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;

      match /data/{docId} {
        allow read, write: if isOwner(spaceId);
      }
    }

    match /sessions/{sessionId} {
      allow read, write: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }
  }
}
