{
  "name": "second-brain-ai",
  "version": "1.0.0",
  "type": "module",
  "description": "Persistent memory system for AI assistant with isolated context spaces",
  "main": "dist/index.js",
  "packageManager": "pnpm@10.28.0",
  "scripts": {
    "build": "tsc && node scripts/copy-public.cjs",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "vitest run --passWithNoTests",
    "deploy": "firebase deploy"
  },
  "keywords": [
    "ai",
    "memory",
    "context",
    "assistant"
  ],
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^5.2.1",
    "firebase": "^12.8.0",
    "firebase-admin": "^13.6.0",
    "firebase-functions": "^7.0.3",
    "multer": "^2.0.2",
    "openai": "^6.16.0",
    "pdf-parse": "^1.1.1",
    "uuid": "^9.0.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.0.0",
    "@types/pdf-parse": "^1.1.5",
    "@types/uuid": "^9.0.7",
    "firebase-tools": "^15.4.0",
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "sharp": "^0.34.5",
    "tsx": "^4.19.2",
    "typescript-eslint": "^8.54.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": "24"
  }
}
