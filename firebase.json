{
    "hosting": {
        "public": "dist/public",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/api/**",
                "function": "api"
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    },
    "functions": {
        "source": ".",
        "codebase": "default",
        "ignore": [
            "coverage",
            ".git",
            "firebase-debug.log",
            "firebase-debug.*.log",
            "node_modules",
            ".env.example"
        ],
        "predeploy": [
            "pnpm run build"
        ]
    }
}
